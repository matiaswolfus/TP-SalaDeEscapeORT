<body class="SALA3">

<div>
    <h3>Tiempo restante: <span id="timer"></span></h3>
</div>
<script>
    // Set the timer (default to 60 seconds if ViewBag.tiempoRestante is null)
    let secondsLeft = @Html.Raw(ViewBag.tiempoRestante ?? 600);

    function updateTimer() {
        let minutes = Math.floor(secondsLeft / 60);
        let seconds = Math.floor(secondsLeft % 60);
        document.getElementById('timer').textContent =
            minutes.toString().padStart(2, '0') + ':' +
            seconds.toString().padStart(2, '0');
        if (secondsLeft > 0) {
            secondsLeft--;
            setTimeout(updateTimer, 1000);
        } else {
            // Ensure the URL is properly rendered as a string
            window.location.href = "@Url.Action("perdiste", "Home")";
        }
    }
    updateTimer();
</script>

